<p id="notice"><%= notice %></p>

<div class='form-group col-md-offset-1'><h1>Listing Annonces</h1></div>
<div class="row" style="text-align=center">
<table class="table-hover col-md-8 col-md-offset-2">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Type produit</th>
      <th>Prix mini</th>
      <th>Prix maxi</th>
      <th>Region</th>
      <th>Code postal</th>
      <th colspan="3">Edition</th>
    </tr>
  </thead>

  <tbody>
    <% @annonces.each do |annonce| %>
      <tr>
        <td><%= annonce.titre %></td>
        <td><%= annonce.typeProduit %></td>
        <td><%= annonce.prixMini %></td>
        <td><%= annonce.prixMaxi %></td>
        <td><%= annonce.region %></td>
        <td><%= annonce.codePostal %></td>
        <td><%= link_to '<button class="btn btn-default">Show</button>'.html_safe, annonce %></td>
        <td><%= link_to '<button class="btn btn-default">Edit</button>'.html_safe, edit_annonce_path(annonce) %></td>
        <td><%= link_to '<button class="btn btn-default">Destroy</button>'.html_safe, annonce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br />
<div>
<%= link_to '<button class="col-md-offset-1 btn btn-default">New Annonce</button>'.html_safe, new_annonce_path %>
</div>