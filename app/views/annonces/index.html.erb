<div id="annonce_table" class='form-group col-md-offset-1'><h3>Listing Annonces</h3></div>
<div class="row" style="text-align=center">
<table class="table-hover col-md-8 col-md-offset-2">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Url de recherche</th>
      <th colspan="3">Edition</th>
    </tr>
  </thead>

  <tbody>
    <% if current_user %>
      <% @annonces = Annonce.where(user_id: current_user.id) %>
    <% end %>
    <% @annonces.each do |annonce| %>
      <tr>
        <td><%= annonce.titre %></td>
        <td><%= annonce.urlRecherche %></td>
        <td><%= link_to '<button class="btn btn-default">Voir</button>'.html_safe, annonce %></td>
        <td><%= link_to '<button class="btn btn-default">Editer</button>'.html_safe, edit_annonce_path(annonce) %></td>
        <td><%= link_to '<button class="btn btn-default">Supprimer</button>'.html_safe, annonce, method: :delete, data: { confirm: 'Êtes-vous sur(e) ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br />
<div>
<%= link_to '<button class="col-md-offset-1 btn btn-default">Créer annonce</button>'.html_safe, new_annonce_path %>

</div>