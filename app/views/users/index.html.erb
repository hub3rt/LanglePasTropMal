
<p id="notice"><%= notice %></p>

<div class='form-group col-md-offset-1'><h1>Listing Users</h1></div>
<div class="row" style="text-align=center">
<table class="table-hover col-md-8 col-md-offset-2">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th colspan="3">Edition</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nom %></td>
        <td><%= user.prenom %></td>
        <td><%= link_to '<button class="btn btn-default">Show</button>'.html_safe, user %></td>
        <td><%= link_to '<button class="btn btn-default">Edit</button>'.html_safe, edit_user_path(user) %></td>
        <td><%= link_to '<button class="btn btn-default">Destroy</button>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br />
<div>
<%= link_to '<button class="col-md-offset-1 btn btn-default">New User</button>'.html_safe, new_user_path %>
</div>