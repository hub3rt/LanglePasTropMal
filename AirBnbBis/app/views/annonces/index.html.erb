<p id="notice"><%= notice %></p>

<h1>Listing Annonces</h1>

<%= form_tag annonces_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :titre => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Adresse</th>
      <th>Prix nuit</th>
      <th>Nbre place</th>
      <th>Wifi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @annonces.each do |annonce| %>
      <tr>
        <td><%= annonce.titre %></td>
        <td><%= annonce.description %></td>
        <td><%= annonce.adresse %></td>
        <td><%= annonce.prix_nuit %></td>
        <td><%= annonce.nbre_place %></td>
        <td><%= annonce.wifi %></td>
        <td><%= link_to 'Show', annonce %></td>
        <td><%= link_to 'Edit', edit_annonce_path(annonce) %></td>
        <td><%= link_to 'Destroy', annonce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Annonce', new_annonce_path %>
